{
    "provider": {
        "name": "queenslize-rest-api"
    },
    "consumer": {
        "name": "ann-hannah"
    },
    "interactions": [
        {
            "description": "A request for the full menu",
            "request": {
                "method": "GET",
                "path": "/pizzas"
            },
            "response": {
                "status": 200,
                "headers": {
                    "Content-Type": "application/hal+json;charset=UTF-8"
                },
                "body": {
                    "_embedded": {
                        "pizzas": [
                            {
                                "name": "Hawaii",
                                "ingredients": [
                                    "PINEAPPLE",
                                    "PINEAPPLE"
                                ]
                            }
                        ]
                    }
                },
                "matchingRules": {
                    "header": {
                        "Content-Type": {
                            "matchers": [
                                {
                                    "match": "regex",
                                    "regex": "application\\/hal\\+json;charset=UTF-8"
                                }
                            ],
                            "combine": "AND"
                        }
                    },
                    "body": {
                        "$._embedded.pizzas": {
                            "matchers": [
                                {
                                    "match": "type",
                                    "min": 0
                                }
                            ],
                            "combine": "AND"
                        },
                        "$._embedded.pizzas[*].name": {
                            "matchers": [
                                {
                                    "match": "type"
                                }
                            ],
                            "combine": "AND"
                        },
                        "$._embedded.pizzas[*].ingredients": {
                            "matchers": [
                                {
                                    "match": "type",
                                    "min": 1
                                }
                            ],
                            "combine": "AND"
                        },
                        "$._embedded.pizzas[*].ingredients[*]": {
                            "matchers": [
                                {
                                    "match": "type"
                                }
                            ],
                            "combine": "AND"
                        }
                    }
                }
            },
            "providerStates": [
                {
                    "name": "pizzas are present"
                }
            ]
        }
    ],
    "metadata": {
        "pact-specification": {
            "version": "3.0.0"
        },
        "pact-jvm": {
            "version": "3.5.8"
        }
    }
}